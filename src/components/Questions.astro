  }

  .preguntas h2 {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 2rem;
    line-height: 1.3;
    color: var(--white);
  }

  .header__btn {
    margin: 2rem 0;
  }

  .preguntas p {
    max-width: 600px;
    margin: 2rem auto 0;
    color: var(--extra-light);
    line-height: 1.7;
    font-size: 16px;
  }

  /* Tablet styles */
  @media (min-width: 768px) {
    .preguntas {
      padding: 4rem 2rem;
    }

    .preguntas h2 {
      font-size: 2.2rem;
    }

    .preguntas p {
      font-size: 18px;
      line-height: 1.8;
    }
  }

  /* Desktop styles */
  @media (min-width: 1024px) {
    .preguntas {
      padding: 5rem 3rem;
    }

    .preguntas h2 {
      font-size: 2.5rem;
