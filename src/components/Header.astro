---
// Header component
---

<nav>
  <div class="nav__bar">        
    <a href="https://credigestor.com" class="logo-link">
      <img src="/credigestor.svg" alt="CrediGestor" class="logo-img">
      CrediGestor
    </a>
    <div class="nav__menu__btn" id="menu-btn">
      <i class="ri-menu-3-line"></i>
    </div>
  </div>
  <ul class="nav__links" id="nav-links">
    <li><a href="#inicio">Inicio</a></li>
    <li><a href="#reportados">Reportados</a></li>
    <li><a href="#beneficios">Beneficios</a></li>
    <li><a href="#preguntas">Preguntas</a></li>
    <li><a href="#convenios">Convenios</a></li>
    <li><a href="#requisitos">Requisitos</a></li>
    <li><a href="/blog">Blog</a></li>
    <li><a href="#contact" class="btn"> Whatsapp☺<span><i class="ri-whatsapp-line"></i></span></a></li>
  </ul>
  <a href="https://wa.me/573505489828" target="_blank" rel="noopener noreferrer" class="btn btn__large">
    Whatsapp☺ <span><i class="ri-whatsapp-line"></i></span>
  </a>
</nav>

<style>
  /* Navigation styles */
  nav {
    position: fixed;
    isolation: isolate;
    top: 0;
    width: 100%;
    max-width: var(--max-width);
    margin: auto;
    z-index: 9;
  }

  .nav__bar {
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    background-image: var(--gradient-1);
  }

  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--white);
    font-size: 1.2rem;
    font-weight: 600;
  }

  .logo-img {
    width: 25px;
    height: auto;
    margin-right: 8px;
  }

  .nav__menu__btn {
    font-size: 1.5rem;
    color: var(--white);
    cursor: pointer;
  }

  .nav__links {
    list-style: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    transform: translateY(-100%);
    transition: 0.5s;
    z-index: -1;
    opacity: 0;
    visibility: hidden;
    border-radius: 0 0 12px 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .nav__links.open {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }

  .nav__links li {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    width: 100%;
    text-align: center;
    margin: 0;
    padding: 0;
  }

  .nav__links li:last-child {
    border-bottom: none;
  }

  .nav__links .btn {
    margin: 0.5rem auto 0;
    width: fit-content;
    min-width: 160px;
    padding: 0.8rem 1.5rem;
    border-radius: 8px;
  }

  .nav__links a {
    color: var(--white);
    transition: all 0.3s ease;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 0.6rem 0;
    min-height: 40px;
    box-sizing: border-box;
    font-size: 1rem;
    background: rgba(255, 255, 255, 0.03);
  }

  .nav__links a:hover {
    color: #ff7300;
    transform: translateY(-1px);
  }

  .btn__large {
    display: none;
  }

  /* Media queries for responsive logo */
  @media (max-width: 576px) {
    .logo-img {
      width: 25px;
      margin-right: 6px;
    }
  }

  @media (max-width: 768px) {
    .logo-img {
      width: 25px;
      margin-right: 4px;
    }
  }

  /* Desktop styles */
  @media (width > 768px) {
    nav {
      height: 62px; /* altura fija = altura original (~96px) * 1.3 */
      padding: 0 1rem; /* solo padding horizontal */
      position: static;
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      max-width: var(--max-width);
      margin: 0 auto;
    }

    .nav__bar {
      padding: 0;
      background-image: none;
      display: contents;
    }

    .nav__menu__btn {
      display: none;
    }

    .nav__links {
      padding: 0;
      width: unset;
      position: static;
      transform: none;
      flex-direction: row;
      background: none;
      opacity: 1;
      visibility: visible;
      border-radius: 0;
      box-shadow: none;
      flex: 1;
      justify-content: center;
      gap: 0.5rem;
      min-width: 0; /* permite que el contenedor se encoja sin romper el layout */
    }

    .nav__links li {
      border-bottom: none;
      width: auto;
      text-align: left;
      margin: 0;
      padding: 0;
    }

    .nav__links a {
      display: block;
      padding: 0.5rem 0.8rem;
      min-height: auto;
      font-size: 0.95rem;
      background: none;
      white-space: nowrap;
      width: auto; /* sobrescribe width:100% del modo móvil */
    }

    .nav__links a:hover {
      color: #ff7300;
      transform: none;
    }

    /* Ocultar CTA móvil en escritorio con mayor especificidad */
    .nav__links li:last-child,
    .nav__links .btn {
      display: none !important;
    }

    .nav__links li:last-child {
      display: none;
    }

    .nav__links .btn {
      margin: 0;
      width: auto;
      min-width: auto;
      padding: 0.5rem 0.8rem;
      border-radius: 0;
    }

    .btn__large {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem; /* igual que el header del blog */
      background: #ff7300;
      color: var(--white);
      border-radius: 6px; /* igual que el header del blog */
      text-decoration: none;
      font-weight: 600;
      font-size: 0.9rem; /* igual que el header del blog */
      transition: all 0.3s ease;
      white-space: nowrap;
      flex-shrink: 0;
    }

    .btn__large:hover {
      background: #e65c00;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(255, 115, 0, 0.3);
    }
  }

  /* Tablet large and small desktop optimization */
  @media (width > 768px) and (width <= 1024px) {
    nav { height: 65px; padding: 0 0.75rem; }

    .nav__links {
      gap: 0.25rem;
    }

    .nav__links a {
      padding: 0.4rem 0.6rem;
      font-size: 0.9rem;
    }

    .btn__large { padding: 0.5rem 1rem; font-size: 0.9rem; }
  }

  /* Extra responsive adjustments for very tight spaces */
  @media (width > 768px) and (width <= 900px) {
    .nav__links a {
      padding: 0.4rem 0.4rem;
      font-size: 0.85rem;
    }

    .btn__large {
      padding: 0.5rem 0.8rem;
      font-size: 0.85rem;
    }

    .logo-link {
      font-size: 1.1rem;
    }
  }

  /* Ajustes para escritorio medio (1025px a 1319px) */
  @media (width > 1024px) and (width < 1320px) {
    nav { height: 65px; padding: 0 1rem; }
    .nav__links { gap: 0.5rem; }
    .nav__links a { padding: 0.5rem 0.7rem; font-size: 0.95rem; }
    .logo-link { font-size: 1.1rem; }
    .btn__large { padding: 0.65rem 1.05rem; font-size: 0.95rem; }
  }

  /* Large desktop (≥1320px) */
  @media (width >= 1320px) {
    nav { height: 65px; padding: 0 1.25rem; }
    .nav__links { gap: 1rem; }
    .nav__links a { padding: 0.6rem 1rem; font-size: 1rem; }
    .btn__large { padding: 0.5rem 1rem; font-size: 0.9rem; }
  }
</style>

<script>
  // Mobile menu functionality
  const navLinks = document.getElementById("nav-links");
  const menuBtn = document.getElementById("menu-btn");
  const menuBtnIcon = menuBtn?.querySelector("i");

  menuBtn?.addEventListener("click", (e) => {
    navLinks?.classList.toggle("open");

    const isOpen = navLinks?.classList.contains("open");
    menuBtnIcon?.setAttribute(
      "class",
      isOpen ? "ri-close-line" : "ri-menu-3-line"
    );
  });

  navLinks?.addEventListener("click", (e) => {
    navLinks.classList.remove("open");
    menuBtnIcon?.setAttribute("class", "ri-menu-3-line");
  });
</script>