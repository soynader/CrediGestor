<header class="section__container header__container" id="inicio">
  <div class="video-container">
    <script>
      // Optimización de carga de Wistia con IntersectionObserver y carga diferida
      document.addEventListener('DOMContentLoaded', function() {
        // Función para cargar los scripts de Wistia
        const loadWistiaScripts = () => {
          // Verificar si los scripts ya están cargados
          if (document.querySelector('script[src="https://fast.wistia.com/player.js"]')) {
            return;
          }
          
          // Cargar el script principal de Wistia
          const playerScript = document.createElement('script');
          playerScript.src = 'https://fast.wistia.com/player.js';
          playerScript.async = true;
          document.head.appendChild(playerScript);

          // Cargar el script específico del video
          playerScript.onload = () => {
            const embedScript = document.createElement('script');
            embedScript.src = 'https://fast.wistia.com/embed/50onh39pm2.js';
            embedScript.async = true;
            embedScript.type = 'module';
            document.head.appendChild(embedScript);
          };
        };

        // Usar IntersectionObserver para cargar los scripts cuando el contenedor esté cerca del viewport
        if ('IntersectionObserver' in window) {
          const videoObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                // Cargar scripts cuando el contenedor está visible o cerca
                loadWistiaScripts();
                videoObserver.unobserve(entry.target);
              }
            });
          }, { 
            rootMargin: '200px 0px', // Precargar cuando esté a 200px de entrar en viewport
            threshold: 0.01
          });

          const target = document.querySelector('.video-container');
          if (target) {
            videoObserver.observe(target);
          }
        } else {
          // Fallback para navegadores sin soporte para IntersectionObserver
          // Retrasar la carga para priorizar contenido crítico
          setTimeout(loadWistiaScripts, 1000);
        }
      });
    </script>

    <style>
      wistia-player[media-id='50onh39pm2']:not(:defined) {
        background: center / cover no-repeat url('https://embed-ssl.wistia.com/deliveries/8b187fef037714db268216b4ad827473.webp?image_crop_resized=380x214');
        display: block;
        padding-top: 56.25%;
        border-radius: 1rem;
        content-visibility: auto;
      }

      wistia-player[media-id='50onh39pm2'] {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%; border-radius: 1rem;
      }

      #video-placeholder { 
        position: absolute; 
        top: 0; 
        left: 0; 
        width: 100%; 
        height: 100%; 
        object-fit: cover; 
        border-radius: 1rem; 
        transition: opacity .3s ease;
      }
      /* Hide placeholder when the custom element is defined */
      wistia-player[media-id='50onh39pm2']:defined + #video-placeholder { opacity: 0; pointer-events: none; }
    </style>

    <wistia-player media-id="50onh39pm2" aria-label="Video explicativo sobre crédito de libranza para pensionados"></wistia-player>
    <img
      id="video-placeholder"
      src="https://embed-ssl.wistia.com/deliveries/8b187fef037714db268216b4ad827473.webp?image_crop_resized=380x214"
      alt="Video explicativo sobre crédito de libranza para pensionados"
      width="380" 
      height="214"
      fetchpriority="high"
      decoding="async"
    />
  </div>

  <div class="header__content">
    <div>
      <h1>Rápido, sencillo y confiable: Crédito de libranza diseñado para pensionados, maestros y policías.</h1>
    </div>
    <p class="horas">
      Aprobación en 4 horas
    </p>
    <div class="header__btn">
      <a href="https://wa.me/573505489828" target="_blank" rel="noopener noreferrer" class="btn">
        <span><i class="ri-whatsapp-line"></i></span> Asesoría Gratis
      </a>
    </div>
  </div>
</header>

<style>
  /* Header styles */
  .header__container {
    padding-top: 5rem;
    display: grid;
    gap: 2rem;
    isolation: isolate;
    contain: layout style;
  }

  .header__content {
    text-align: center;
    contain: content;
  }

  .header__content h1 {
    margin-bottom: 0.5rem;
    font-size: 2rem;
    text-align: center;
    line-height: 1.2;
  }

  .horas {
    font-size: 1rem;
    font-weight: 600;
    color: #00aa44;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .header__btn {
    margin-top: 2rem;
  }

  /* Video container styles */
  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
    max-width: 100%;
    isolation: isolate;
    z-index: -1;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    contain: layout size style;
    will-change: transform;
  }

  .video-container wistia-player {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 1rem;
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .header__container {
      padding-top: 5rem;
      grid-template-columns: repeat(4, 1fr);
      align-items: center;
      gap: 2rem;
    }

    .video-container {
      grid-area: 1/3/2/5;
      max-width: none;
      margin: 0;
    }

    .header__content {
      grid-area: 1/1/2/3;
      text-align: left;
    }

    .header__content h1 {
      font-size: 3rem;
      line-height: 3rem;
      text-align: left;
    }

    .horas {
      font-size: 1.2rem;
    }
  }

  @media (min-width: 1024px) {
    .header__content h1 {
      font-size: 3rem;
    }

    .horas {
      font-size: 1.4rem;
    }
  }
</style>