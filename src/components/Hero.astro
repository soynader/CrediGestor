---
import WhatsAppIcon from './WhatsAppIcon.astro';
---

<section class="relative flex items-center justify-center overflow-hidden pt-4 sm:pt-12 pb-4 sm:pb-8">
  
  <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8 py-2 sm:py-4">
    <div class="grid lg:grid-cols-2 gap-6 sm:gap-12 items-center">
      <!-- Left Column - Text Content -->
      <div class="space-y-4 sm:space-y-6">
        <div class="space-y-2 sm:space-y-3">
          <h1 class="text-3xl lg:text-5xl font-bold leading-tight">
            <span class="block">Rápido, sencillo y</span>
            <span class="block text-emerald-400">confiable:</span>
            <span class="block text-xl lg:text-2xl font-normal text-blue-100 mt-1 sm:mt-2">
              Crédito de libranza diseñado para pensionados, maestros y policías.
            </span>
          </h1>
        </div>
        
        <!-- Key Benefits -->
        <div class="space-y-1 sm:space-y-2">
          <div class="flex items-center space-x-2">
            <div class="w-1.5 h-1.5 bg-emerald-400 rounded-full"></div>
            <span class="text-base">Aprobación en 4 horas</span>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
          <a 
            href="https://wa.me/573505489828?text=Hola,%20quiero%20solicitar%20un%20crédito%20de%20libranza" 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-yellow-500 hover:bg-yellow-600 text-black px-6 py-3 sm:px-8 sm:py-4 rounded-lg font-bold text-base sm:text-lg transition-all duration-300 hover:scale-105 shadow-lg flex items-center justify-center space-x-2"
          >
            <span>Solicitar crédito</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          
          <a 
            href="https://wa.me/573505489828?text=Hola,%20necesito%20asesoría%20gratuita%20sobre%20créditos%20de%20libranza" 
            target="_blank" 
            rel="noopener noreferrer"
            class="border-2 border-white hover:bg-white hover:text-blue-900 text-white px-6 py-3 sm:px-8 sm:py-4 rounded-lg font-bold text-base sm:text-lg transition-all duration-300 flex items-center justify-center space-x-2"
          >
            <WhatsAppIcon class="w-5 h-5" />
            <span>Asesoría Gratis</span>
          </a>
        </div>
      </div>
      
      <!-- Right Column - Video -->
      <div class="relative">
        <div class="aspect-video rounded-lg overflow-hidden relative">
          <video 
              id="heroVideo"
              class="w-full h-full object-cover rounded-lg"
              preload="none"
              poster=""
              playsinline
              muted
            >
             <source src="https://media.tecnochat.com/video/1755102041236-creditoporlibranza.mp4" type="video/mp4">
            <p class="text-white p-4">
              Tu navegador no soporta el elemento de video. 
              <a href="https://wa.me/573505489828?text=Hola,%20quiero%20ver%20el%20video%20informativo%20sobre%20créditos%20de%20libranza" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="text-green-400 hover:text-green-300 underline">
                Contáctanos por WhatsApp para ver el video
              </a>
            </p>
          </video>
          
          <!-- Custom Play Button -->
          <div id="playButton" class="absolute inset-0 flex items-center justify-center bg-black/30 cursor-pointer transition-opacity duration-300" role="button" aria-label="Reproducir video informativo sobre créditos de libranza" tabindex="0">
            <div class="bg-white/90 hover:bg-white rounded-full p-4 shadow-lg transition-all duration-300 hover:scale-110">
              <svg class="w-12 h-12 text-purple-900 ml-1" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="absolute top-0 right-0 w-64 h-64 bg-yellow-400/10 rounded-full -translate-y-32 translate-x-32"></div>
  <div class="absolute bottom-0 left-0 w-48 h-48 bg-purple-400/10 rounded-full translate-y-24 -translate-x-24"></div>
</section>

<script>
  // Import performance utilities
  import { isMobileDevice, debounce } from '../utils/performance.js';
  
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.getElementById('heroVideo');
    const playButton = document.getElementById('playButton');
    
    if (!video || !playButton) {
      console.warn('Video o botón de play no encontrado');
      return;
    }
    
    // Optimize video loading for mobile devices
    const isMobile = isMobileDevice();
    if (isMobile) {
      video.preload = 'none';
      video.poster = '/header.avif'; // Add poster for better UX
    }
    
    // Configurar para mostrar el frame del segundo 25
    video.addEventListener('loadeddata', function() {
      try {
        video.currentTime = 26;
        video.pause();
      } catch (error) {
        console.error('Error al configurar el tiempo del video:', error);
      }
    });
    
    // Click en el botón de play
    playButton.addEventListener('click', function() {
      try {
        video.currentTime = 0; // Comenzar desde el inicio
        video.controls = true;
        video.play().catch(error => {
          console.error('Error al reproducir el video:', error);
        });
        playButton.style.opacity = '0';
        setTimeout(() => {
          playButton.style.display = 'none';
        }, 300);
      } catch (error) {
        console.error('Error en el click del botón de play:', error);
      }
    });
    
    // Cuando el video se pausa, mostrar el botón de play
    video.addEventListener('pause', function() {
      if (!video.ended) {
        playButton.style.display = 'flex';
        setTimeout(() => {
          playButton.style.opacity = '1';
        }, 10);
      }
    });
    
    // Cuando el video termina, mostrar el botón de play
    video.addEventListener('ended', function() {
      video.controls = false;
      playButton.style.display = 'flex';
      setTimeout(() => {
        playButton.style.opacity = '1';
      }, 10);
    });
    
    // Manejar errores de carga del video
    video.addEventListener('error', function(e) {
      console.error('Error al cargar el video:', e);
      playButton.innerHTML = '<div class="text-white text-center p-4"><p>Error al cargar el video</p><p class="text-sm mt-2">Contáctanos por WhatsApp</p></div>';
    });
  });
</script>